<div id='map'></div>
<script>
	var map;
	$(document).ready(function(){
		map = new GMaps({
	  	div: '#map',
	  	lat: 54,
	  	lng: -2.5,
	  	zoom: 5,
	  	// disableDefaultUI: true,
	  	zoomControl: true,
	  	zoomControlOpt: {
	  		position: 'LEFT_CENTER'
	  	},
	  	panControl: false,
	  	streetViewControl: false,
		  scaleControl: false,
		  scrollwheel: false,
		  disableDoubleClickZoom: false
	  });


	});

</script>

<% if @sightings.any? %>
	<% @sightings.each do |sighting| %>
		<article>
		<p>Sighting: <%= sighting.caption %></p>
		<p>Location: <%= sighting.location %></p>
		<p>Date: <%= sighting.seen_at %></p>
		<% if user_signed_in? && !find_likes(sighting).include?(current_user.id) %>
			<span class='likes_count'><%= sighting.likes.count %></span> likes
			<%= link_to 'Like', sighting_likes_path(sighting), class: 'likes_link' %>
		<% end %>
		<% if find_likes(sighting).include?(current_user.id) %>
			<p>You loved this sighting!!!!</p>
		<% end %>
		</article>
		<%= javascript_tag do %>
			$(document).ready(function(){
				map.addMarker({
	  			lat: <%= sighting.latitude %>,
				  lng: <%= sighting.longitude %>,
				  title: "Jumper?",
				  icon: "images/sean.png",
	  			infoWindow: {content: '<%= sighting.caption %><br/><%= image_tag sighting.image.url(:medium) %><br/><%= sighting.location %><br/><%= sighting.seen_at %>'},
				  click: function(e) {
	  			}
				});
			});
		<% end %>

	<% end %>
<% else %>
	<h1> Sean's jumper is nowhere to be seen! </h1>
<% end %>

<%= link_to 'Submit New Sighting', new_sighting_path %>
