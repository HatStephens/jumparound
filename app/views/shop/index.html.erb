<div class="jumbotron">
  <h1>Shop</h1>
  <p>With Christmas just around the corner grab your favourite Sean related item today...</p>
</div>

<div class="container-fluid">
  <div class="row">
    <% @items.any? %>
    <% @items.each do |item| %>
      <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="panel-panel">
                <%= image_tag item.image.url(:grid), class: "image-image" %>
              </div>
            </div>
            <div class="panel-footer shop">

                <div id='item-details'><%= item.name %>
                  Â£<%= item.price %></br>
                  <%= item.description %>
                </div>

                <div id='buy-button'>
                  <button type="button" class="btn btn-default btn-sm"><%= buy_now(item) %></button>
                </div>

            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
